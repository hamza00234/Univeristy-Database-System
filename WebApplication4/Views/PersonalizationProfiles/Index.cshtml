@model IEnumerable<WebApplication4.Models.PersonalizationProfile>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PreferredContentType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmotionalState)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.PersonalityType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Learner)
            </th>
            <th>
                ProfileId <!-- Add a header for ProfileId -->
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.PreferredContentType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmotionalState)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PersonalityType)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Learner.LearnerId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ProfileId) <!-- Display ProfileId here -->
                </td>
                <td>
                    @Html.ActionLink("Edit", "Edit", new { id = item.ProfileId }) |
                    @Html.ActionLink("Details", "Details", new { id = item.ProfileId }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.ProfileId })
                </td>
            </tr>
        }
    </tbody>
