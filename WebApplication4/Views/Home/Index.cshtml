@model WebApplication4.Models.Learner

@{
    ViewData["Title"] = "Welcome";
    Layout = "_Layout";
}

<div class="container text-center mt-5">
    <h1>Welcome to Our Application!</h1>
    <p>Please log in or create an account to get started.</p>

    <!-- Login Buttons -->
    <div class="mt-4">
        <h2>Log In</h2>
        <a asp-controller="Learners" asp-action="Login" class="btn btn-primary mx-2">Learner</a>
        <a asp-controller="Instructors" asp-action="Login" class="btn btn-warning mx-2">Instructor</a>
        <a asp-controller="Admins" asp-action="Login" class="btn btn-info mx-2">Admin</a>
    </div>

    <div class="container text-center mt-5">
        <h2>Create Account</h2>
        <p>Choose the type of account you want to create:</p>

        <!-- Account Creation Buttons -->
        <div class="mt-4">
            <a asp-controller="Learners" asp-action="Create" class="btn btn-success mx-2">Learner</a>
            <a asp-controller="Instructors" asp-action="Create" class="btn btn-warning mx-2">Instructor</a>
            <a asp-controller="Admins" asp-action="Create" class="btn btn-info mx-2">Admin</a>
        </div>
    </div>
</div>
