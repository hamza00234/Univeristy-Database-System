@{
    ViewData["Title"] = "Add Post";
}

<h1>Add Post</h1>

<form asp-action="AddPost" method="post">
    <div class="form-group">
        <label for="LearnerID">Learner ID</label>
        <input type="number" name="LearnerID" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="DiscussionID">Discussion ID</label>
        <input type="number" name="DiscussionID" class="form-control" required />
    </div>

    <div class="form-group">
        <label for="Post">Post Content</label>
        <textarea name="Post" class="form-control" rows="5" required></textarea>
    </div>

    <button type="submit" class="btn btn-primary mt-3">Submit Post</button>
    <a asp-action="Details" class="btn btn-secondary mt-3">Back</a>
</form>
